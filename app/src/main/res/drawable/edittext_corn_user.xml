<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
	Definindo a cor de background - azul claro.
    -->
    <solid android:color="@color/branco" />

    <!--
	Definindo bordas de 1dp de espessura e na cor
	cinza.
    -->
    <stroke
        android:color="@color/preto"
        android:width="1dp" />

    <!--
	Definindo bordas arredondadas no fundo da View
	retangular.
    -->
    <corners
		android:topRightRadius="@dimen/rotacao"
		android:topLeftRadius="@dimen/rotacao"
	/>
</shape>
