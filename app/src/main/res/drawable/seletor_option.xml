<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
	<text
		/>
    <!--
	Definindo a cor de background - azul claro.
    -->
    <solid android:color="@color/preto" />

    <!--
	Definindo bordas de 1dp de espessura e na cor
	cinza.
    -->
    <stroke
        android:color="@color/lilais"
        android:width="2dp" />

    <!--
	Definindo bordas arredondadas no fundo da View
	retangular.
    -->
    <corners
		android:topRightRadius="@dimen/rotacao"
		android:topLeftRadius="@dimen/rotacao"
        android:bottomLeftRadius="@dimen/rotacao"
        android:bottomRightRadius="@dimen/rotacao"
	/>
</shape>
